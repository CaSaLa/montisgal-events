@model montisgal_events.mvc.Models.Groups.CreateViewModel

<form asp-controller="Group" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="npt-name" class="form-label">Group name</label>
        <input asp-for="Name" id="npt-name" class="form-control" type="text" placeholder="Name">
    </div>
    
    <div class="mb-3">
        <label for="txt-description" class="form-label">Group description</label>
        <textarea asp-for="Description" id="txt-description" class="form-control" rows="3" placeholder="Description"></textarea>
    </div>

    <div class="mb-3">
        <div class="form-check form-switch">
            <input asp-for="IsPublic" id="npt-is-public" class="form-check-input" type="checkbox">
            <label for="npt-is-public" class="form-check-label">Is public</label>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create group</button>
    </div>
</form>